<script>
function openModal(country) {
    document.getElementById('subscriptionModal').style.display = 'block';
}

function closeModal() {
    document.getElementById('subscriptionModal').style.display = 'none';
}

// عرض حقل رقم الهاتف بعد إدخال الاسم
document.getElementById('name').addEventListener('input', function() {
    if (this.value.trim() !== "") {
        document.getElementById('phoneContainer').style.display = 'block';
        document.getElementById('subscribeButton').style.display = 'block';
    } else {
        document.getElementById('phoneContainer').style.display = 'none';
        document.getElementById('subscribeButton').style.display = 'none';
    }
});

// منع إرسال النموذج لإظهار الرسالة فقط
document.getElementById('subscriptionForm').onsubmit = function(e) {
    e.preventDefault();
    window.location.href = 'https://rb.gy/orrsha'; // تحويل إلى الرابط المطلوب
}
</script>

