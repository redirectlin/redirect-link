            <!-- حقل رقم الهاتف يظهر فقط بعد إدخال الاسم -->
            <div id="phoneContainer" style="display:none;">
                <label for="phone" style="font-weight: bold;">رقم الهاتف:</label>
                <input type="tel" id="phone" name="phone" style="padding: 10px; border-radius: 5px; border: 1px solid #ddd; margin-bottom: 10px;" required>
            </div>

            <!-- زر الاشتراك -->
            <button type="submit" style="background-color: #007bff; padding: 10px; font-size: 1.1rem; font-weight: bold; border-radius: 5px; color: #fff; display:none;" id="subscribeButton">اشترك</button>
        </form>
    </div>
